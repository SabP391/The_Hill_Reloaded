<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.GlassUnitFragment">

    <ImageView
        android:id="@+id/bg_glass_frag"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/stile_fragment_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ic_glass_unit"
        android:layout_width="105dp"
        android:layout_height="125dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/asset2_fab_verde_vetro"
        app:layout_constraintStart_toStartOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toTopOf="@+id/bg_glass_frag" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_black"
        android:text="@string/unita_riciclo_vetro"
        android:textColor="@color/verde_scuro"
        app:layout_constraintStart_toEndOf="@+id/ic_glass_unit"
        app:layout_constraintTop_toTopOf="@+id/bg_glass_frag" />

    <ImageButton
        android:id="@+id/glass_unlockable1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="320dp"
        android:background="@drawable/bottoni_personalizzati"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toTopOf="@+id/bg_glass_frag" />

    <TextView
        android:id="@+id/glass_costo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="330dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toBottomOf="@+id/glass_unlockable1" />

    <TextView
        android:id="@+id/glass_ricavo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="330dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toBottomOf="@+id/glass_costo1" />

    <ImageButton
        android:id="@+id/glass_unlockable2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="220dp"
        android:background="@drawable/bottoni_personalizzati"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toTopOf="@+id/bg_glass_frag" />

    <TextView
        android:id="@+id/glass_costo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="230dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toBottomOf="@+id/glass_unlockable2" />

    <TextView
        android:id="@+id/glass_ricavo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="230dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toBottomOf="@+id/glass_costo2" />

    <ImageButton
        android:id="@+id/glass_unlockable3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/bottoni_personalizzati"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toTopOf="@+id/bg_glass_frag" />

    <TextView
        android:id="@+id/glass_costo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toBottomOf="@+id/glass_unlockable3" />

    <TextView
        android:id="@+id/glass_ricavo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toBottomOf="@+id/glass_costo3" />

    <ImageButton
        android:id="@+id/glass_unlockable4"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bottoni_personalizzati"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toTopOf="@+id/bg_glass_frag" />

    <TextView
        android:id="@+id/glass_costo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toBottomOf="@+id/glass_unlockable4" />

    <TextView
        android:id="@+id/glass_ricavo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintEnd_toEndOf="@+id/bg_glass_frag"
        app:layout_constraintTop_toBottomOf="@+id/glass_costo4" />

    <ImageButton
        android:id="@+id/glass_close_frag"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/bottoni_personalizzati"
        android:onClick="onClickEsciDaMenu"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/bg_glass_frag"
        app:layout_constraintStart_toStartOf="@+id/bg_glass_frag"
        app:tint="@color/verde_scuro" />

    <android.widget.Button
        android:id="@+id/glass_upgrade_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bottoni_personalizzati"
        android:text="UPGRADE"
        app:layout_constraintStart_toEndOf="@+id/ic_glass_unit"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/glass_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintStart_toEndOf="@+id/ic_glass_unit"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/glass_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintStart_toEndOf="@+id/ic_glass_unit"
        app:layout_constraintTop_toBottomOf="@+id/glass_up" />

    <TextView
        android:id="@+id/glass_wear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/verde_scuro"
        app:layout_constraintStart_toEndOf="@+id/ic_glass_unit"
        app:layout_constraintTop_toBottomOf="@+id/glass_status" />

    <ImageView
        android:id="@+id/tut_glass_up_img"
        android:layout_width="186dp"
        android:layout_height="68dp"
        android:layout_marginBottom="-20dp"
        android:scaleY="-1"
        android:src="@drawable/arrow"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/glass_upgrade_button"
        app:layout_constraintStart_toStartOf="@+id/glass_upgrade_button" />

    <TextView
        android:id="@+id/tut_glass_up_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-80dp"
        android:background="@color/giallo_scuro_background"
        android:fontFamily="@font/roboto_black"
        android:text="@string/tut_glass_up"
        android:textColor="@color/verde_scuro"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/tut_glass_up_img"
        app:layout_constraintStart_toEndOf="@+id/tut_glass_up_img" />

    <FrameLayout
        android:id="@+id/unlockable_glass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>