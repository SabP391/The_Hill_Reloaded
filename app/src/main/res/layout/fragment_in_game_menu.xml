<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".InGameMenuFragment">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/stile_fragment_background"
        android:paddingHorizontal="170dp"
        android:paddingVertical="160dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/bottone_plastica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/bottoni_personalizzati"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:src="@drawable/ic_menu_di_gioco"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:tint="#f5d615" />

    <ImageButton
        android:id="@+id/bottone_vetro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bottoni_personalizzati"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:src="@drawable/ic_menu_di_gioco"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/bottone_plastica"
        app:tint="#8ebf12" />

    <ImageButton
        android:id="@+id/bottone_acciaio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/bottoni_personalizzati"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:src="@drawable/ic_menu_di_gioco"
        app:layout_constraintStart_toEndOf="@+id/bottone_plastica"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:tint="#4ad2ca" />

    <ImageButton
        android:id="@+id/bottone_ewaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bottoni_personalizzati"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:src="@drawable/ic_menu_di_gioco"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/bottone_vetro"
        app:tint="#d61a8f" />

    <ImageButton
        android:id="@+id/bottone_alluminio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bottoni_personalizzati"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:src="@drawable/ic_menu_di_gioco"
        app:layout_constraintStart_toEndOf="@+id/bottone_vetro"
        app:layout_constraintTop_toBottomOf="@+id/bottone_acciaio"
        app:tint="#bc45c8" />

    <ImageButton
        android:id="@+id/bottone_carta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bottoni_personalizzati"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:src="@drawable/ic_menu_di_gioco"
        app:layout_constraintStart_toEndOf="@+id/bottone_ewaste"
        app:layout_constraintTop_toBottomOf="@+id/bottone_alluminio"
        app:tint="#4443be" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mission_frag_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>